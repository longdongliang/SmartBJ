<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_tpi_news_listview_item_pic"
        android:background="#000000"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/pic_item_list_default"/>

    <TextView
        android:id="@+id/tv_tpi_news_listview_item_title"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_tpi_news_listview_item_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="地方大幅度发放打发打发辅导辅导辅导辅导辅导dfdfdfdfs"/>

    <TextView
        android:id="@+id/tv_tpi_news_listview_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_tpi_news_listview_item_title"
        android:layout_below="@+id/tv_tpi_news_listview_item_title"
        android:text="2015-11-11 11:11"/>

    <ImageView
        android:id="@+id/iv_tpi_news_listview_item_icon"
       android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_news_comment_num"/>

</RelativeLayout>
